<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CopaFilmesApp.Views.MovieList"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="MovieListPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Gerar" />

    </ContentPage.ToolbarItems>
    <ListView
        CachingStrategy="RecycleElement"
        IsPullToRefreshEnabled="True"
        IsRefreshing="{Binding IsRefresh}"
        ItemsSource="{Binding Movies}"
        RefreshCommand="{Binding RefreshCommand}" SelectionMode="None">

        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell
                    Detail="{Binding Ano}"
                    Text="{Binding Titulo}"
                    TextColor="Green">
                    <TextCell.ContextActions>
                        <MenuItem
                            Command="{Binding BindingContext.RemoveMovie, Source={x:Reference MovieListPage}}"
                            CommandParameter="{Binding .}"
                            IsDestructive="True"
                            Text="Remover" />
                    </TextCell.ContextActions>
                </TextCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
